@Scripts.Render("~/bundles/jquery")
<script>


    var dataHead = ['Широта', 'Долгота','Комплект', 'Количество', 'Изменить', 'Удалить'];

    $('.messageClose').on('click', function () {
        $('#messageModalLong').modal('hide');
        //window.location.reload()
    })

    $('.table thead').append('<tr> <th>' + dataHead[0] + '</th> <th>'
        + dataHead[1] + '</th> <th>'
        + dataHead[2]
        + '</th> <th>' + dataHead[3] + '</th> <th>' + dataHead[4] + '</th> <th>' + dataHead[5] +'</th> </th>')

    $.ajax({
        url: "@Url.Action("GetCustomerData", "CustomerData")",
        type: "POST",
        data: {
        },
        success: function (data) {
            if(data!=null)
            $.each(data, function (index, row) {
                $('.table tbody').append('<tr> <td>' 
                    + row.latitude + '</td> <td>'
                    + row.longitude + '</td> <td>'
                    + row.kitType + '</td> <td>'
                    + row.count 
                    + '</td> <td  data-id=' + row.id + '> <button class="btn" id="editBtn"><i class="fa fa-edit" aria-hidden="true"></i></button> </td>'
                    + '<td  data-id=' + row.id +'> <button class="btn" id="deleteBtn"><i class="fa fa-times" aria-hidden="true"></i></button> </td> </tr>')
            });
        },
        error: function (data) {
            alert('Error occurred');
        }
    });

    $("#addNewObject").on('click', function (e) {
     $.ajax({
            url: "@Url.Action("AddCustomerData", "CustomerData")",
            type: "POST",
                data: {
                 
                    latitude: $('#addLatitude').val(),
                    longitude: $('#addLongitude').val(),
                    kitType: $('#addKitType').val(),
                    count: $('#addCount').val(),
            },
            success: function (data) {
                $('#message').text(data);
                $('#messageModalLong').modal('show');
            },
            error: function (data) {
                alert('Error occurred');
            }
     });
    })


     $('.table').on('click', 'td', function () {
        var colIndex = $(this).parent().children().index($(this));
        var rowIndex = $(this).parent().parent().children().index($(this).parent());

        var id = $(this).data("id");

        if (colIndex == 4) {

            editId = id;


            $.ajax({
                url: "@Url.Action("GetCustomerDataForId", "CustomerData")",
                type: "POST",
                data: {
                    id: id
                },
                success: function (data) {
                    
                    editLatitude = data.latitude;
                    editLongitude = data.longitude;
                    editKitType = data.kitType;
                    editCount = data.count;
                    
                    $('#editLatitude').val(data.latitude);
                    $('#editLongitude').val(data.longitude);
                    $('#editKitType').val(data.kitType);
                    $('#editCount').val(data.count);
                    $('#editModalLong').modal('show');
                },
                error: function (data) {
                    alert('Error occurred');
                }
            });
        }

        if (colIndex == 5) {
            $.ajax({
                url: "@Url.Action("DeleteCustomerData", "CustomerData")",
                type: "POST",
                data: {
                    id: id
                },
                success: function (data) {
                    $('#message').text(data);
                    $('#messageModalLong').modal('show');
                    //window.location.reload()
                },
                error: function (data) {
                    alert('Error occurred');
                }
            });
        }

     });

    $("#editObject").on('click', function (e) {
          $.ajax({
                url: "@Url.Action("EditCustomerData", "CustomerData")",
                type: "POST",
                    data: {
                        id: editId,
                        
                        oldLatitude: editLatitude,
                        oldLongitude: editLongitude,
                        oldKitType: editKitType,
                        oldCount: editCount,

                        newLatitude: $('#editLatitude').val(),
                        newLongitude: $('#editLongitude').val(),
                        newKitType: $('#editKitType').val(),
                        newCount: $('#editCount').val(),
                },
                success: function (data) {
                    $('#message').text(data);
                    $('#messageModalLong').modal('show');
                },
                error: function (data) {
                    alert('Error occurred');
                }
            });
    });
</script>