            <script>
            ymaps.ready(function () {
                    var mapAdd = new ymaps.Map('mapAdd', {
                        center: [54.7431, 55.9678],
                        zoom: 9,
                        controls: ['geolocationControl', 'searchControl']
                    });
                var mapEdit = new ymaps.Map('mapEdit', {
                    center: [54.7431, 55.9678],
                    zoom: 9,
                    controls: ['geolocationControl', 'searchControl']
                });
        //var searchControl = new ymaps.control.SearchControl({
