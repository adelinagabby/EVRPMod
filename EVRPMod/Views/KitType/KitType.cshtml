@Scripts.Render("~/bundles/jquery")
<script>


    var dataHead = ['Вид', 'Вес', 'Изменить', 'Удалить'];

    $('.messageClose').on('click', function () {
        $('#messageModalLong').modal('hide');
        //window.location.reload()
    })

    $('.table thead').append('<tr> <th>' + dataHead[0] + '</th> <th>'
        + dataHead[1] + '</th> <th>'
        + dataHead[2]
        + '</th> <th>' + dataHead[3] + '</th> </th>')

    $.ajax({
        url: "@Url.Action("GetKitType", "KitType")",
        type: "POST",
        data: {
        },
        success: function (data) {
            if(data!=null)
            $.each(data, function (index, row) {
                $('.table tbody').append('<tr> <td>' + row.name + '</td> <td>'
                    + row.weight
                    + '</td> <td  data-id=' + row.id + '> <button class="btn" id="editBtn"><i class="fa fa-edit" aria-hidden="true"></i></button> </td>'
                    + '<td  data-id=' + row.id +'> <button class="btn" id="deleteBtn"><i class="fa fa-times" aria-hidden="true"></i></button> </td> </tr>')
            });
        },
        error: function (data) {
            alert('Error occurred');
        }
    });

    $("#addNewObject").on('click', function (e) {
     $.ajax({
            url: "@Url.Action("AddKitType", "KitType")",
            type: "POST",
                data: {
                    name: $('#addNameKitType').val(),
                    weight: $('#addWeight').val(),

            },
            success: function (data) {
                $('#message').text(data);
                $('#messageModalLong').modal('show');
            },
            error: function (data) {
                alert('Error occurred');
            }
     });
    })


     $('.table').on('click', 'td', function () {
        var colIndex = $(this).parent().children().index($(this));
        var rowIndex = $(this).parent().parent().children().index($(this).parent());

        var id = $(this).data("id");

        if (colIndex == 2) {

            editId = id;


            $.ajax({
                url: "@Url.Action("GetKitTypeForId", "KitType")",
                type: "POST",
                data: {
                    id: id
                },
                success: function (data) {
                    editNameKitType = data.name;
                    editWeight = data.weight;
                    $('#editNameKitType').val(data.name);
                    $('#editWeight').val(data.weight);
                    $('#editModalLong').modal('show');
                },
                error: function (data) {
                    alert('Error occurred');
                }
            });
        }

        if (colIndex == 3) {
            $.ajax({
                url: "@Url.Action("DeleteKitType", "KitType")",
                type: "POST",
                data: {
                    id: id
                },
                success: function (data) {
                    $('#message').text(data);
                    $('#messageModalLong').modal('show');
                    //window.location.reload()
                },
                error: function (data) {
                    alert('Error occurred');
                }
            });
        }

     });

    $("#editObject").on('click', function (e) {
          $.ajax({
                url: "@Url.Action("EditKitType", "KitType")",
                type: "POST",
                    data: {
                        id: editId,
                        oldName: editNameKitType,
                        oldWeight: editWeight,
                        newName: $('#editNameKitType').val(),
                        newWeight: $('#editWeight').val(),
                },
                success: function (data) {
                    $('#message').text(data);
                    $('#messageModalLong').modal('show');
                },
                error: function (data) {
                    alert('Error occurred');
                }
            });
    });
</script>